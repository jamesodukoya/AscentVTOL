{
	"name": "AscentVTOL Development Environment",
	"build": {
		"dockerfile": "Dockerfile",
		"args": {
			"USERNAME": "user",
			"USER_UID": "1000",
			"USER_GID": "1000"
		}
	},
	// Container user
	"remoteUser": "user",
	"containerUser": "user",
	// Set the working directory to /home/user
	"workspaceFolder": "/home/user/workspace",
	// Mount directories
	"mounts": [
		// Mount workspace directory for persistent storage
		"source=${localWorkspaceFolder}/workspace,target=/home/user/workspace,type=bind",
		// Mount X11 socket for GUI applications
		"source=/tmp/.X11-unix,target=/tmp/.X11-unix,type=bind"
	],
	// Container environment variables
	"containerEnv": {
		"DISPLAY": "${localEnv:DISPLAY}",
		"WORKSPACE_DIR": "/home/user"
	},
	// Run arguments
	"runArgs": [
		"--privileged",
		"--network=host",
		"--gpus=all",
		"--name",
		"ascent_vtol"
	],
	// Post-create command - runs after container is created
	"postCreateCommand": "bash /home/user/.devcontainer/post-create.sh",
	// VS Code customizations
	"customizations": {
		"vscode": {
			"settings": {
				"terminal.integrated.defaultProfile.linux": "bash",
				"terminal.integrated.profiles.linux": {
					"bash": {
						"path": "/bin/bash",
						"args": [
							"-l"
						]
					}
				},
				"files.watcherExclude": {
					"**/build/**": true,
					"**/install/**": true,
					"**/log/**": true
				},
				"cmake.configureOnOpen": false,
				"python.defaultInterpreterPath": "/usr/bin/python3"
			},
			"extensions": [
				"ms-vscode.cpptools-extension-pack",
				"ms-vscode.cmake-tools",
				"ms-python.python",
				"ranch-hand-robotics.rde-pack",
				"ms-azuretools.vscode-docker",
				"ms-azuretools.vscode-containers",
				"redhat.vscode-yaml"
			]
		}
	}
}