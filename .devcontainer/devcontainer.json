{
	"name": "AscentVTOL Development Environment",
	"dockerComposeFile": [
		"../docker-compose.yml"
	],
	// The 'service' property tells VS Code which container to attach to by default.
	// You can switch between containers using the VS Code command palette.
	"service": "px4-dev",
	// The 'workspaceFolder' sets the default directory that VS Code opens.
	"workspaceFolder": "/home/user/PX4-Autopilot",
	// List of VS Code extensions to install automatically inside the container.
	"extensions": [
		"ms-vscode.cpptools",
		"ms-python.python",
		"dotjoshjohnson.xml",
		"ms-azuretools.vscode-docker",
		"ms-vscode.cmake-tools",
		"twxs.cmake",
		"ms-iot.vscode-ros"
	],
	// Use 'postCreateCommand' to run commands after the container is created.
	// For example, you could install dependencies here.
	// "postCreateCommand": "colcon build",
	// Connect as a non-root user.
	"remoteUser": "user"
}